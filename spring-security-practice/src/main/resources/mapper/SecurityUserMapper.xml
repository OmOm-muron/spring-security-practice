<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SecurityUserMapper">

    <resultMap id="SecurityUserResultMap" type="com.example.entity.SecurityUser">
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="enabled" column="enabled"/>
    </resultMap>

    <select id="getAllSecurityUsers" resultMap="SecurityUserResultMap">
        SELECT username, enabled FROM security_user
    </select>

    <insert id="addSecurityUser" parameterType="com.example.entity.SecurityUser">
        INSERT INTO security_user (username, password)
        VALUES (#{username}, #{password})
    </insert>

</mapper>
